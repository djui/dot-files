[user]
	name = Uwe Dauernheim
	email = uwe@dauernheim.net
[push]
 	# instead of pushing all branches with git push, you only push the current one.
	default = current
[core]
	# global per user gitignore file
	excludesfile = ~/.gitignore_global
[init]
	templatedir = ~/.git_template
[diff]
    renames	= copies
[merge]
	summary = true
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[pager]
	log  = diff-highlight
	show = diff-highlight
	diff = diff-highlight
[github]
	user = uwe@dauernheim.net
	token =
[hub]
	protocol = https
	host = github.com
[guitool "Ignore file"]
	cmd = echo "$FILENAME" >> .gitignore
	needsfile = yes
[guitool "Delete file"]
	cmd = git rm $FILENAME
	needsfile = yes

[alias]
	authors       = "!git shortlog -s -- | sort -n -k1"
	conflicts     = "!git ls-files -u | cut -f 2 | sort -u" # alias for unmerged
	last          = log -1 HEAD
	unmerged      = "!git ls-files -u | cut -f 2 | sort -u"
	unmerged-diff = "!git diff --name-status --diff-filter=U | cut -f 2"
	unstage       = reset HEAD --
	untracked     = "!git ls-files --other --exclude-standard"
