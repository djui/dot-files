	# global per user gitignore file
	excludesfile = ~/.gitignore_global
[init]
	templatedir = ~/.git_template
[diff]
    renames	= copies
[merge]
	summary = true
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
