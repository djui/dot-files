[guitool "Ignore file"]
	cmd = echo "$FILENAME" >> .gitignore
	needsfile = yes

[guitool "Delete file"]
	cmd = git rm $FILENAME
	needsfile = yes

[hub]
	protocol = https
	host = github.com

[init]
	templatedir = ~/.git_template
	defaultBranch = main

[merge]
	summary = true
	tool = opendiff

[pager]
	log  = diff-highlight
	show = diff-highlight
	diff = diff-highlight

[push]
 	# instead of pushing all branches with git push, you only push the current one.
	default = current

