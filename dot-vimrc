set nocompatible
set modeline
set ruler
set statusline=[%n]\ %t\ %y[%{&ff}]%(\[%M%R%H]%)%=\ %4l,%02c%2V\ %P%*
set laststatus=2
set ignorecase
set smartcase
set incsearch
set showmatch
set wrap
set linebreak
set autoindent
set smartindent
set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab
set number
set numberwidth=4
set wildmode=list:longest 

if &t_Co > 2
  syntax on
  set hlsearch
endif

if &term =~ "xterm"
  let &t_SI = "\<Esc>]12;purple\x7"
  let &t_EI = "\<Esc>]12;blue\x7"
endif

set encoding=utf8
set fileencoding=utf8
"set listchars=tab:>,trail:_,precedes:<,extends:>
"set list

try
  lang en_US
catch
endtry

set ffs=unix,dos,mac

map <c-s> :w
map <M-Left> :bprevious<CR>
map <M-Right> :bnext<CR>
map <c-a> ggVG

let g:molokai_original=1 " does not work in tty
colorscheme molokai

