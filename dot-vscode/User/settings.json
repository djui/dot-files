{
// Editor

    "editor.renderWhitespace": true, // ctrl+shift+i
    "editor.renderIndentGuides": true,
    "editor.rulers": [80],
    "editor.scrollBeyondLastLine": false,

    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": false,
    // Fira Code
    "editor.fontFamily": "FiraCode-Retina",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.lineHeight": 17,

// Telemetry

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

// External Terminal

    "terminal.external.osxExec": "iTerm.app",

// Extensions

    "vsicons.icons": "https://github.com/jedmao/vscode-icons/raw/grayscale-icons/icons.zip",
    "files.insertFinalNewline": true,
    "todoScanRegex": "(?:TODO|FIXME)\\s*\\W{0,1}(\\s+.*|(?:\\w|\\d).*)$",

// Languages

    "go.useCodeSnippetsOnFunctionSuggest": true,

    "phpformatter.pharPath": "php-cs-fixer",
    "phpformatter.onSave": true
}
